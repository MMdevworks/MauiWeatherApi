<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWeatherApi.Pages.WeatherInfoPage"
             Title="Weather Information Page"
             BackgroundColor="DarkSlateGrey">
               
    <VerticalStackLayout>
        <Frame Margin="20">
            <Grid ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Allow user to enter coordinates -->
                <Entry Placeholder="Lat" Grid.Column="0" />
                <Entry Placeholder="Lon" Grid.Column="1" />
                <Button Text="Fetch" Grid.Column="2"/>
                
            </Grid>
            
        </Frame>
        <Image WidthRequest="100" HeightRequest="100"/>
        <Label HorizontalOptions="Center" FontSize="70" TextColor="White" Text="0Â°C" />
        <Label HorizontalOptions="Center" FontSize="25" FontAttributes="Bold" TextColor="White" Text="Raining" />

    </VerticalStackLayout>
</ContentPage>